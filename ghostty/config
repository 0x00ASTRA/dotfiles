# Colors
background = 000000
foreground = ffffff

# Window settings
background-opacity = 0.85
background-blur-radius = 25
window-decoration = false
window-theme = system

# Shell integration
shell-integration = zsh

# Additional recommended settings
cursor-style = block
font-size = 14
font-family = "JetBrainsMonoNerdFont-Regular"

# Additional font variants available for bold, italic, etc
font-family-bold = "JetBrainsMonoNerdFont-Bold"
font-family-italic = "JetBrainsMonoNerdFont-Italic"
font-family-bold-italic = "JetBrainsMonoNerdFont-BoldItalic"
mouse-hide-while-typing = true
confirm-close-surface = false

# Keybindings
keybind = ctrl+shift+r=reload_config
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = shift+space>.=next_tab
keybind = shift+space>,=previous_tab
keybind = ctrl+shift+space>physical:comma=move_tab:-1
keybind = ctrl+shift+space>physical:period=move_tab:1
keybind = ctrl+shift+physical:one=goto_tab:0
keybind = ctrl+shift+physical:two=goto_tab:1
keybind = ctrl+shift+physical:three=goto_tab:2
keybind = ctrl+shift+physical:four=goto_tab:3
keybind = ctrl+shift+physical:five=goto_tab:4
keybind = ctrl+shift+c=copy_to_clipboard
#keybind = ctrl+shift+v=paste
#keybind = ctrl+shift+physical:equal=increase_font_size
#keybind = ctrl+shift+f>physical:up=decrease_font_size
keybind = ctrl+shift+f>physical:0=reset_font_size
